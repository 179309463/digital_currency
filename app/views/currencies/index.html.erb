<div class="m30"></div>
<%= render "share/advertisement" %>

<div class="m15"></div>
<div class="w1200">
  <div class="col">      
    <div class="box w1200" style="min-height:880px">
      <div class="boxTit">
        <h1>所有货币</h1>
        <%= render "currencies/searchform" %>
      </div>
      <div class="boxTools">
        <%= render "tool_top_left" %>
        <%= render "tool_pagelist_simple" %>
      </div>
      <div class="boxContain">
        <style>
        .maintable tr td a.price.text-red:after,
        .maintable  tr td .tprice.text-red:after {
          content: url('<%= asset_path("arrow-d4.svg")%>')
        }

        .maintable tr td a.price.text-green:after,
        .maintable  tr td .tprice.text-green:after {
          content: url('<%= asset_path("arrow-u3.svg")%>')        
        }
        .maintable .tags-green, .maintable .tags-red {
          margin-left: 0
        }
        </style>
        <table class="table maintable" id="table">
          <thead>
            <tr>
              <th>#</th>
              <th data-sort-method='none'>名称</th>
              <th>流通市值</th>
              <th>价格</th>
              <th>流通数量</th>
              <th>流通率</th>
              <th>成交额(24h)</th>
              <th>涨幅(1h)</th>
              <th>涨幅(24h)</th>
              <th>涨幅(7d)</th></tr>
          </thead>
          <tbody>
            <% @currencies.each do |currency| %>
            <tr id="<%= currency[:id] %>">
              <td><%= currency[:order] %></td>
              <td>
                <a href="currencies/<%= currency[:id] %>.html" target="_blank">
                  <img src="<%= currency[:image] %>" alt="<%= currency[:name] %>"><%= currency[:name] %></a>
                </td>
              <td class="market-cap" data-usd="<%= currency[:marketcap][:usd] %>" data-cny="<%= currency[:marketcap][:cny] %>" data-btc="<%= currency[:marketcap][:btc] %>">¥<%= currency[:marketcap][:cny] %>亿</td>
              <td>
                <a href="../currencies/<%= currency[:id] %>.html#markets" target="_blank" class="price" data-usd="<%= currency[:price][:usd] %>" data-cny="<%= currency[:price][:cny] %>" data-btc="<%= currency[:price][:btc] %>">¥<%= currency[:price][:cny] %></a></td>
              <td><%= currency[:volCount] %>万</td>
              <td>80.1%</td>
              <td>
                <a href="../currencies/<%= currency[:id] %>.html#markets" target="_blank" class="volume" data-usd="<%= currency[:volume][:usd] %>" data-cny="<%= currency[:volume][:cny] %>" data-btc="<%= currency[:volume][:btc] %>"><%= number_to_currency currency[:volume][:cny] %>万</a></td>
              <td>
                <span class="text-green">1.06%</span>
              </td>
              <td class="change">
                <span class="text-red">-6.43%</span>
              </td>
              <td>
                <span class="text-red">-13.54%</span>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <script>
          new Tablesort(document.getElementById('table'));
        </script>
      </div>
      <div class="boxTools">
        <%= render "tool_pagelist_simple" %>
      </div>
      <style>
      .tips {
        padding: 15px;
        color: #999;
        font-size: 12px
      }
      </style>      
      <div class="tips">备注：* 不可挖矿&nbsp;&nbsp;&nbsp;&nbsp;** 有预挖矿&nbsp;&nbsp;&nbsp;&nbsp;IFO表示该币由其它币分叉而来。</div></div>
  </div>
</div>