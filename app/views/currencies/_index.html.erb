            <span class="text-red">-5.51%</span></td>
          <td class="char">
            <span class="line2" data-peity='{"stroke": "#3ca316"}'>12256,11131,11131,10330,10396,11237,11255,11715,11953,11518,11636,12002,11907,11619,12774,12999,13198,13222,12533,12125,11625,11626,11843,11964,10868,10940,10892,10596</span>
            <script type="text/javascript">

            </script>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <script type="text/javascript">
      new Tablesort(document.getElementById('table'));
      $('.line2').peity('line', {
        width: 80,
        height: 20,
        fill: 'none',
        strokeWidth: 1,
        min: 2500,
        stroke: '#3499da'
      })      
    </script>
  </div>
  <div class="boxTools">
    <%= render "currencies/tool_pagelist" %>
  </div>
  <style>
  .tips {
    padding: 15px;
    color: #999;
    font-size: 12px
  }
  </style>  
