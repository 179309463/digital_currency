<%- model_class = Exchange -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:icon) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:memo) %></th>
      <th><%= model_class.human_attribute_name(:web_site) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:support_type) %></th>
      <th><%= model_class.human_attribute_name(:stars) %></th>
      <th><%= model_class.human_attribute_name(:trade_pair_count) %></th>
      <th><%= model_class.human_attribute_name(:rank) %></th>
    </tr>
  </thead>
  <tbody>
    <% @exchanges.each do |exchange| %>
      <tr>
        <td><%= image_tag exchange.icon, width: 20, height: 20 %></td>
        <td><%= link_to exchange.name, exchange_path(exchange) %></td>
        <td><%= truncate(exchange.memo, length: 10) %></td>
        <td><%= link_to exchange.web_site, exchange.web_site %></td>
        <td><%= exchange.country %></td>
        <td><%= exchange.support_type_text %></td>
        <td><span class="raty" data-score="<%= exchange.stars %>"></span></td>
        <td><%= exchange.trade_pair_count %></td>
        <td><%= exchange.rank %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= paginate @exchanges %>