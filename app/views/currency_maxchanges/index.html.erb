<div class="m30"></div>
<%= render "share/advertisement" %>

<div class="m15"></div>
<div class="w1200">      
  <div class="col">        
    <div class="box box860" style="min-height:880px">         
      <style>
      .tabTit .more {
        float: right
      }

      .tabTit .more:before {
        content: url("more.svg")
      }

      .tabTit .more:hover:before {
        content: url("more2.svg")
      }

      .tabTit h3, .tabTit h1, .tabTit h2 {
        display: inline-block;
        float: left;
        height: 40px;
        line-height: 40px;
        font-size: 17px;
        font-weight: normal;
        text-align: center;
        border-top: 3px solid #fff;
        cursor: pointer
      }

      .tabTit {
        overflow: hidden
      }

      .tabTit a {
        color: #666 !important
      }

      .tabTit .active {
        border-top: 3px solid #3499da;
        background: url("arrow-d2.svg") center -6px no-repeat
      }

      .tabTit .active.tit {
        color: #3499da
      }

      .tabTit .more {
        height: 41px;
        width: 40px;
        margin-top: -10px;
        margin-right: -15px
      }

      .tabTit .more {
        margin-right: 0;
        margin-top: 0
      }

      .tabTit .more:before {
        display: block;
        margin-top: 12px;
        margin-left: 10px
      }
      </style>
      <ul class="tabTit">
        <h2 class="active tit" style="width: 150px">涨幅排行榜</h2>
        <h2 class="tit" style="width: 150px">跌幅排行榜</h2>
      </ul>
      <div class="boxContain">      
        <div class="tabBody">
          <%= render "currency_maxchanges/index_up_complex" %>
          <div class="m15"></div>
        </div>
        <div class="tabBody" style="display:none">
          <%= render "currency_maxchanges/index_down_complex" %>
          <div class="m15"></div>
        </div>
      </div>
      <script>
        $(function(){
          $('.tabTit .tit').click(function () {
            var box = $(this).closest('.box').find('.tabBody');
            var index = $(this).index();
            if (box.eq(index).css('display') !== 'block') {
                $(this).closest('.tabTit').find('.tit').removeClass('active');
                $(this).addClass('active');
                box.css('display', 'none');
                box.eq(index).fadeIn('100');
            }
          });
        })
      </script>
    </div>
    <%= render 'currency_vols/index' %>
    <%= render 'share/banner2' %>
    <%= render 'currency_newests/index' %>
  </div>
</div>
